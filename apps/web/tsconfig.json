{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/contentlayer/*": [".contentlayer/*"],
      "@/components/*": ["components/*"],
      "@/data/*": ["data/*"],
      "@/lib/*": ["lib/*"],
      "@/layouts/*": ["layouts/*"]
    }
  },
  "include": [
    "env.d.ts",
    "next-env.d.ts",
    "next.config.js",
    "postcss.config.js",
    "tailwind.config.js",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".contentlayer/generated"
  ],
  "exclude": ["node_modules"]
}
