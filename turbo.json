{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "globalEnv": [
    "NEXT_UMAMI_ID",
    "NEXT_PUBLIC_GISCUS_REPO",
    "NEXT_PUBLIC_GISCUS_REPOSITORY_ID",
    "NEXT_PUBLIC_GISCUS_CATEGORY",
    "NEXT_PUBLIC_GISCUS_CATEGORY_ID"
  ],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    }
  }
}
